<ul class="list-unstyled">
  <% microposts.each do |micropost| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(micropost.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= link_to micropost.user.name, user_path(micropost.user) %> <span class="text-muted">posted at <%= micropost.created_at %></span>
        </div>
        <div>
          <p class="mb-0"><%= micropost.content %></p>
        </div>
        <div>
          <% if current_user.favoriting?(micropost) %>
          <% binding.pry %>
            <%= form_with(model: user.favorites.find_by(favorite_id: user.id), local: true, method: :delete) do |f| %>
              <%= hidden_field_tag :favorite_id, current_user.id %>
              <%= f.submit 'Unfavorite', class: 'btn btn-danger btn-block' %>
            <% end %>
          <% else %>
            <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
              <%= hidden_field_tag :favorite_id, current_user.id %>
              <%= f.submit 'Favorite', class: 'btn btn-primary btn-block' %>
            <% end %>
          <% end %>
          <% if micropost.user %>
            <%= link_to "Delete", micropost, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
          <% end %>
        </div>
      </div>
     
    </li>
  <% end %>
  
  <%= paginate microposts %>
</ul>